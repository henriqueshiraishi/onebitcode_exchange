<div class="exchange_box">
  <div class="card">
    <div class="card-header text-center">
      Simule sua convers√£o
    </div>
    <div class="card-block">
      <%= form_tag("/exchange", method: "post", id: "exchange_form") do %>
        <div class="local_currency">
          <div class="form-group">
            <p class="title text-center">Moeda Local</p>
            <%= select_tag "currency", options_for_select(currency_select, "BRL"), class: "form-control transition convert", id: "currency" %>
          </div>
          <div class="form-group">
            <input type="number" name="quantity" id="quantity" class="form-control" placeholder="Quantidade ($10)" step="any" autofocus required>
          </div>
        </div>
        <div>
          <div class="text-center">
            <img src="convert.png" alt="Convert" class="image">
          </div>
        </div>
        <div class="destination_currency">
          <div class="form-group">
            <p class="title text-center">Moeda Pretendida</p>
            <%= select_tag "currency_destination", options_for_select(currency_select, "EUR"), class: "form-control transition convert", id: "currency_destination"%>
          </div>
          <div class="form-group">
            <input type="text" id="result" name="result" class="form-control" placeholder="Resultado" readonly>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
